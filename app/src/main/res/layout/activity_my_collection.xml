<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.kvitochka.learnmixer.MyCollection">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#ff511156"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout"
        android:weightSum="1">

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Learnmixer"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="26dp"
            android:textColor="#ffffffff"
            android:textIsSelectable="false"
            android:textStyle="bold"
            android:clickable="true"
            android:layout_weight="0.88" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Hello, Vita!"
            android:id="@+id/textView3"
            android:clickable="true"
            android:textColor="#ffffffff"
            android:textStyle="bold" />
    </LinearLayout>
    <TextView
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name of collection"
        android:id="@+id/textView2"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/linearLayout"
        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec euismod convallis dui, vitae tincidunt dolor efficitur gravida. Maecenas sed lorem et dui venenatis commodo. Quisque ut tempus felis, sit amet porttitor augue. Praesent pharetra id ipsum vitae posuere. Pellentesque dapibus, dui sed tincidunt accumsan, arcu urna finibus turpis, ac cursus arcu sapien id sem. Etiam tempus dolor in tortor scelerisque faucibus."
        android:id="@+id/textView4"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"/>

    <EditText
        android:layout_marginRight="10dp"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:id="@+id/editText"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:background="#ffffffff"
        android:hint="Comment..."/>

</RelativeLayout>
